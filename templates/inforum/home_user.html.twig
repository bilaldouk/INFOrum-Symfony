{% extends 'base.html.twig' %}

{% block body%}

<h1>Bienvenue sur Inforum, {{ app.user.alias | raw }}!</h1>
        <h1>All the questions:</h1>
            {% if questions %}
                <ul class="list-group">
                {% for question in questions %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/question/{{question.id}}/show">{{ question.title }}: {{ question.content }}</a>
                        <span class="badge badge-primary badge-pill">{{question.answers.count}}</span>
                    </li>
                {% endfor %}
                </ul>
            {% else %}
                <p>No questions are available.</p>
            {% endif %} 
    </div>
{% endblock %}
